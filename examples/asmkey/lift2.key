functions {
    int UP;
    int DOWN; 
    int TOP; 
    int BOTTOM;
    dynamic int floor;
    dynamic int dir;
}

procedures {

    Lift() {
	if dir = UP then
	    if floor = TOP then
                dir := DOWN
            else
                floor := floor + 1
            end
        else // down
            if floor = BOTTOM then
	        dir := UP
            else
	        floor := floor - 1
	    end
        end
    };

}

problem {
    ! UP = DOWN -> all f:int. all d:int. (f = floor & d = dir -> [ call Lift ] ((! floor = f) | (! dir = d)))
}
