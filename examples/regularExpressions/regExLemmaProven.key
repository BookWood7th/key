\rules {

  repeatZero {
     \schemaVar \term RegEx rexp;
     \schemaVar \term CharList string;

     \find (repeat(rexp, 0))
     \replacewith(regEx(empty))
     \heuristics (concrete)
  };

  repeatOnce {
     \schemaVar \term RegEx rexp;

     \find (repeat(rexp, 1))
     \replacewith (rexp)
     \heuristics (concrete)
  };




}