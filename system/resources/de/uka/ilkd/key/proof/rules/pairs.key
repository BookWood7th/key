\sorts {
    Pair;
}

\functions {
    Pair pair(any, any);
}


\rules {

    //--------------------------------------------------------------------------
    //axiom for pair
    //--------------------------------------------------------------------------
    
    pairEquality {
	\schemaVar \term any e, e2, e3, e4;
   
	\find(pair(e, e2) = pair(e3, e4))
	         
	\replacewith(e = e3 & e2 = e4)
	
	\heuristics(simplify)
    };
}
